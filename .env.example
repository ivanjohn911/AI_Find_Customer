# AI Customer Finder Environment Variables
# Copy this file to .env and fill in your API keys

# ===================================
# REQUIRED: Search API Configuration
# ===================================
# Get your API key from: https://serper.dev
SERPER_API_KEY=your_serper_api_key_here

# ===================================
# OPTIONAL: LLM Provider Configuration
# ===================================
# Choose one: openai, anthropic, google, huoshan, none
LLM_PROVIDER=none

# OpenAI API (https://platform.openai.com/api-keys)
OPENAI_API_KEY=

# Anthropic API (https://console.anthropic.com/settings/keys)
ANTHROPIC_API_KEY=

# Google API (https://makersuite.google.com/app/apikey)
GOOGLE_API_KEY=

# Huoshan/Volcano API (for Chinese users)
ARK_API_KEY=
ARK_BASE_URL=https://ark.cn-beijing.volces.com/api/v3
ARK_MODEL=

# ===================================
# Browser Configuration
# ===================================
# Run browser in headless mode (true/false)
HEADLESS=true

# Page load timeout in milliseconds
TIMEOUT=15000

# Whether to visit contact pages for more info (true/false)
VISIT_CONTACT_PAGE=false